<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib version="4.0">
  <namespace>custom.tags</namespace>
  <short-name>ct</short-name>
  <tag>
    <description>Renders label + input + message field.</description>
    <tag-name>floatingLabelInput</tag-name>
    <source>tags/floatingLabelInput.xhtml</source>
    <attribute>
      <description>The type of the input component.</description>
      <name>id</name>
      <required>true</required>
      <type>java.lang.String</type>
    </attribute>
    <attribute>
      <description>The value of the input component.</description>
      <name>value</name>
      <required>true</required>
    </attribute>
    <attribute>
      <description>The label of the input component.</description>
      <name>label</name>
      <required>true</required>
      <type>java.lang.String</type>
    </attribute>
    <attribute>
      <description>Whether the field is required</description>
      <name>required</name>
      <required>false</required>
      <type>boolean</type>
    </attribute>
    <attribute>
      <description>The style class of the container.</description>
      <name>styleClass</name>
      <required>false</required>
      <type>java.lang.String</type>
    </attribute>
  </tag>
</facelet-taglib>
